# API Configuration
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional for comparison

# VerilogEval Configuration
VERILOGEVAL_DATASET_PATH=./data/verilogeval
SYNTHETIC_DATA_PATH=./data/synthetic
ENABLE_VERILOGEVAL=true
VERILOGEVAL_CACHE_ENABLED=true

# Simulation Configuration
IVERILOG_PATH=/usr/bin/iverilog
VVP_PATH=/usr/bin/vvp
SIMULATION_TIMEOUT=60

# Enhanced Features
ENABLE_VAE_ANOMALY_DETECTION=false  # Set to true when VAE is implemented
VAE_MODEL_PATH=./models/waveform_vae.pth
CUDA_AVAILABLE=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/verilogeval_system.log

# Development
DEBUG_MODE=false
ENABLE_DETAILED_METRICS=true
BENCHMARK_MODE=false
